<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox alignment="TOP_CENTER" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <ComboBox fx:id="combobox_source" prefWidth="150.0" promptText="Select..." />
            <StackPane fx:id="stackpane" maxWidth="300.0" prefWidth="300.0">
               <children>
                  <ImageView fx:id="imageview_webcam" pickOnBounds="true" preserveRatio="true" />
                  <Canvas fx:id="canvas_overlay" />
               </children>
            </StackPane>
            <HBox alignment="CENTER" spacing="4.0">
               <children>
                  <ToggleButton fx:id="toggle_note_display_no_display" mnemonicParsing="false" text="No display">
                     <toggleGroup>
                        <ToggleGroup fx:id="note_display" />
                     </toggleGroup>
                  </ToggleButton>
                  <ToggleButton fx:id="toggle_note_display_english" mnemonicParsing="false" text="English" toggleGroup="$note_display" />
                  <ToggleButton fx:id="toggle_note_display_fixed_do" mnemonicParsing="false" text="Fixed Do" toggleGroup="$note_display" />
               </children>
               <padding>
                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
               </padding>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
