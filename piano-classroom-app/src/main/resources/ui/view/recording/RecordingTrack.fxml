<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<BorderPane style="-fx-border-style: solid; -fx-border-width: 1px; -fx-border-color: #ccc;" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <BorderPane fx:id="bpane_container" BorderPane.alignment="CENTER">
         <left>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="label_channel_name" text="Channel" />
                  <HBox alignment="CENTER" prefHeight="60.0" prefWidth="70.0" spacing="4.0" BorderPane.alignment="CENTER">
                     <children>
                        <ToggleButton fx:id="toggle_record" maxHeight="30.0" maxWidth="30.0" minHeight="30.0" minWidth="30.0" mnemonicParsing="false"  style="-fx-graphic: url('assets/icon/RecordingRecordSmall.png')"/>
                        <Button fx:id="button_clear" maxHeight="30.0" maxWidth="30.0" minHeight="30.0" minWidth="30.0" mnemonicParsing="false" style="-fx-graphic: url('assets/icon/Trash.png')"/>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </left>
      </BorderPane>
   </center>
</BorderPane>
